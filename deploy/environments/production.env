# Production Environment Configuration
# Gentle Nudge Assistant - Production Settings

# Forge Configuration
FORGE_EMAIL="${FORGE_EMAIL}"
FORGE_API_TOKEN="${FORGE_API_TOKEN}"
APP_ID="ari:cloud:ecosystem::app/gentle-nudge-assistant"
ENVIRONMENT_NAME="production"

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=warn
NODE_ENV=production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TONE_VALIDATION=true
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_PERFORMANCE_MONITORING=true

# Notification Settings
NOTIFICATION_FREQUENCY="gentle"
DEFAULT_TONE="gentle"
MIN_TONE_SCORE=0.8
MAX_NOTIFICATIONS_PER_USER=10
NOTIFICATION_BATCH_SIZE=50

# Performance Settings
CACHE_TTL=3600  # 1 hour
REQUEST_TIMEOUT=15000  # 15 seconds
MAX_CONCURRENT_REQUESTS=200

# Security Settings
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=30
ENABLE_REQUEST_LOGGING=false

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_ENDPOINT="/internal/metrics"
HEALTH_CHECK_ENDPOINT="/internal/health"

# Storage Settings
STORAGE_PROVIDER="forge"
STORAGE_TTL=604800  # 7 days
ENABLE_STORAGE_COMPRESSION=true

# Production Specific
MOCK_JIRA_API=false
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=false
WEBPACK_DEV_SERVER=false

# Testing Configuration (Production validation)
RUN_INTEGRATION_TESTS=false
RUN_PERFORMANCE_TESTS=false
RUN_E2E_TESTS=false
TEST_TIMEOUT=120000
TEST_COVERAGE_THRESHOLD=90

# Deployment Settings
DEPLOYMENT_TIMEOUT=1800  # 30 minutes
DEPLOYMENT_RETRY_COUNT=1
BACKUP_RETENTION_DAYS=30
ENABLE_BLUE_GREEN_DEPLOYMENT=true

# External Services (Production)
ANALYTICS_SERVICE_URL="https://analytics.gentlenudge.app"
NOTIFICATION_SERVICE_URL="https://notifications.gentlenudge.app"

# Locale and Internationalization
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,en-GB,es-ES,fr-FR,de-DE,ja-JP"
ENABLE_RTL_SUPPORT=true

# Development Tools (Disabled in production)
ENABLE_DEV_TOOLS=false
ENABLE_REDUX_DEV_TOOLS=false
ENABLE_PERFORMANCE_PROFILER=false

# Logging Configuration
LOG_FORMAT="json"
LOG_OUTPUT="external"
ENABLE_STRUCTURED_LOGGING=true
LOG_SAMPLING_RATE=0.1

# Performance Budgets
PERFORMANCE_BUDGET_JS=200000  # 200KB
PERFORMANCE_BUDGET_CSS=40000  # 40KB
LIGHTHOUSE_PERFORMANCE_THRESHOLD=90
LIGHTHOUSE_ACCESSIBILITY_THRESHOLD=98

# High Availability
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
ENABLE_RETRY_MECHANISM=true
MAX_RETRY_ATTEMPTS=3

# Data Management
ENABLE_DATA_ANONYMIZATION=true
DATA_RETENTION_DAYS=365
ENABLE_GDPR_COMPLIANCE_CHECKS=true
ENABLE_DATA_ENCRYPTION=true

# Marketplace Settings
MARKETPLACE_CATEGORY="productivity"
MARKETPLACE_PRICING_MODEL="freemium"
TRIAL_PERIOD_DAYS=30
FREE_TIER_LIMITS="{\"notifications\": 100, \"users\": 10}"

# Business Intelligence
ENABLE_USAGE_ANALYTICS=true
ENABLE_CONVERSION_TRACKING=true
ENABLE_RETENTION_METRICS=true
BUSINESS_METRICS_ENDPOINT="/internal/business-metrics"

# Compliance and Security
ENABLE_SECURITY_HEADERS=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_AUDIT_LOGGING=true
SECURITY_SCAN_FREQUENCY="daily"

# Error Handling and Recovery
ERROR_REPORTING_SERVICE="sentry"
ENABLE_AUTOMATIC_RECOVERY=true
GRACEFUL_SHUTDOWN_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000