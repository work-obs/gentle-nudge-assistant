# Development Environment Configuration
# Gentle Nudge Assistant - Development Settings

# Forge Configuration
FORGE_EMAIL="${FORGE_EMAIL}"
FORGE_API_TOKEN="${FORGE_API_TOKEN}"
APP_ID="ari:cloud:ecosystem::app/gentle-nudge-assistant-dev"
ENVIRONMENT_NAME="development"

# Application Settings
DEBUG_MODE=true
LOG_LEVEL=debug
NODE_ENV=development

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TONE_VALIDATION=true
ENABLE_ADAPTIVE_LEARNING=false
ENABLE_BATCH_PROCESSING=true
ENABLE_PERFORMANCE_MONITORING=false

# Notification Settings
NOTIFICATION_FREQUENCY="high"
DEFAULT_TONE="cheerful"
MIN_TONE_SCORE=0.6
MAX_NOTIFICATIONS_PER_USER=20
NOTIFICATION_BATCH_SIZE=10

# Performance Settings
CACHE_TTL=300  # 5 minutes
REQUEST_TIMEOUT=30000  # 30 seconds
MAX_CONCURRENT_REQUESTS=50

# Security Settings
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_REQUEST_LOGGING=true

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_ENDPOINT="/metrics"
HEALTH_CHECK_ENDPOINT="/health"

# Storage Settings
STORAGE_PROVIDER="forge"
STORAGE_TTL=86400  # 24 hours
ENABLE_STORAGE_COMPRESSION=false

# Development Specific
MOCK_JIRA_API=false
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
WEBPACK_DEV_SERVER=true

# Testing Configuration
RUN_INTEGRATION_TESTS=false
RUN_PERFORMANCE_TESTS=false
RUN_E2E_TESTS=false
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=70

# Deployment Settings
DEPLOYMENT_TIMEOUT=600  # 10 minutes
DEPLOYMENT_RETRY_COUNT=3
BACKUP_RETENTION_DAYS=7
ENABLE_BLUE_GREEN_DEPLOYMENT=false

# External Services (Development)
ANALYTICS_SERVICE_URL="https://dev-analytics.example.com"
NOTIFICATION_SERVICE_URL="https://dev-notifications.example.com"

# Locale and Internationalization
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,en-GB"
ENABLE_RTL_SUPPORT=false

# Development Tools
ENABLE_DEV_TOOLS=true
ENABLE_REDUX_DEV_TOOLS=true
ENABLE_PERFORMANCE_PROFILER=true

# Logging Configuration
LOG_FORMAT="pretty"
LOG_OUTPUT="console"
ENABLE_STRUCTURED_LOGGING=false
LOG_SAMPLING_RATE=1.0