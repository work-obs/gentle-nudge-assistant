# Staging Environment Configuration
# Gentle Nudge Assistant - Staging Settings

# Forge Configuration
FORGE_EMAIL="${FORGE_EMAIL}"
FORGE_API_TOKEN="${FORGE_API_TOKEN}"
APP_ID="ari:cloud:ecosystem::app/gentle-nudge-assistant-staging"
ENVIRONMENT_NAME="staging"

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=info
NODE_ENV=production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TONE_VALIDATION=true
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_PERFORMANCE_MONITORING=true

# Notification Settings
NOTIFICATION_FREQUENCY="moderate"
DEFAULT_TONE="supportive"
MIN_TONE_SCORE=0.7
MAX_NOTIFICATIONS_PER_USER=15
NOTIFICATION_BATCH_SIZE=25

# Performance Settings
CACHE_TTL=900  # 15 minutes
REQUEST_TIMEOUT=20000  # 20 seconds
MAX_CONCURRENT_REQUESTS=100

# Security Settings
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=60
ENABLE_REQUEST_LOGGING=true

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_ENDPOINT="/metrics"
HEALTH_CHECK_ENDPOINT="/health"

# Storage Settings
STORAGE_PROVIDER="forge"
STORAGE_TTL=259200  # 72 hours
ENABLE_STORAGE_COMPRESSION=true

# Staging Specific
MOCK_JIRA_API=false
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=true
WEBPACK_DEV_SERVER=false

# Testing Configuration
RUN_INTEGRATION_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_E2E_TESTS=true
TEST_TIMEOUT=60000
TEST_COVERAGE_THRESHOLD=80

# Deployment Settings
DEPLOYMENT_TIMEOUT=900  # 15 minutes
DEPLOYMENT_RETRY_COUNT=2
BACKUP_RETENTION_DAYS=14
ENABLE_BLUE_GREEN_DEPLOYMENT=true

# External Services (Staging)
ANALYTICS_SERVICE_URL="https://staging-analytics.example.com"
NOTIFICATION_SERVICE_URL="https://staging-notifications.example.com"

# Locale and Internationalization
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,en-GB,es-ES,fr-FR"
ENABLE_RTL_SUPPORT=false

# Development Tools
ENABLE_DEV_TOOLS=false
ENABLE_REDUX_DEV_TOOLS=false
ENABLE_PERFORMANCE_PROFILER=false

# Logging Configuration
LOG_FORMAT="json"
LOG_OUTPUT="console,file"
ENABLE_STRUCTURED_LOGGING=true
LOG_SAMPLING_RATE=0.5

# Performance Testing
PERFORMANCE_BUDGET_JS=250000  # 250KB
PERFORMANCE_BUDGET_CSS=50000  # 50KB
LIGHTHOUSE_PERFORMANCE_THRESHOLD=85
LIGHTHOUSE_ACCESSIBILITY_THRESHOLD=95

# Load Testing
LOAD_TEST_USERS=50
LOAD_TEST_DURATION=300  # 5 minutes
STRESS_TEST_ENABLED=true

# Data Management
ENABLE_DATA_ANONYMIZATION=true
DATA_RETENTION_DAYS=90
ENABLE_GDPR_COMPLIANCE_CHECKS=true